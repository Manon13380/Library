{% extends 'base.html.twig' %}

{% block title %}Liste des Livres{% endblock %}

{% block body %}
    <div class="container mx-auto px-4 py-8">
        <h1 class="text-3xl font-bold text-gray-800 mb-8">Bibliothèque</h1>
        
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 xl:grid-cols-4 gap-6">
            {% for book in books %}
                <div class="bg-white rounded-lg shadow-md overflow-hidden hover:shadow-xl transition-shadow duration-300">
                    {% if book.image %}
                        <img src="{{ asset('uploads/photos/' ~ book.image) }}" alt="{{ book.title }}" class="w-full h-64 object-cover">
                    {% else %}
                        <div class="w-full h-64 bg-gray-200 flex items-center justify-center">
                            <svg class="w-16 h-16 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
                            </svg>
                        </div>
                    {% endif %}
                    
                    <div class="p-6">
                        <h2 class="text-xl font-semibold text-gray-800 mb-2 text-center">{{ book.title }}</h2>
                        <p class="text-gray-600 mb-2">Auteur:  {{ book.author }}</p>
                        
                        {% if book.publication %}
                            <p class="text-sm text-gray-500 mb-2">Publié en {{ book.publication }}</p>
                        {% endif %}
                        
                        {% if book.genre %}
                            <div class="flex flex-wrap gap-2 mb-3">
                                {% for genre in book.genre %}
                                    <span class="px-2 py-1 text-xs bg-blue-100 text-blue-800 rounded-full">{{ genre }}</span>
                                {% endfor %}
                            </div>
                        {% endif %}
                        <a href="#" class="text-blue-600 hover:text-blue-800 text-sm font-medium block text-right">Voir plus</a>
                    </div>
                </div>
            {% else %}
                <div class="col-span-full text-center py-12">
                    <p class="text-gray-600">Aucun livre n'a été trouvé dans la bibliothèque.</p>
                </div>
            {% endfor %}
        </div>
    </div>
{% endblock %}

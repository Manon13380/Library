{% extends 'base.html.twig' %}

{% block title %}Ajouter un livre
{% endblock %}

{% block body %}
<div class="container mx-auto px-4 py-8">
	<div class="max-w-2xl mx-auto">
		<h1 class="text-3xl font-bold text-gray-800 mb-8">Ajouter un nouveau livre</h1>

		{{ form_start(bookForm, {'attr': {'class': 'space-y-6'}}) }}
		<div class="bg-white shadow-md rounded-lg p-6">
			<div class="mb-6">
				{{ form_row(bookForm.title, {
                            'attr': {
                                'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500',
                                'placeholder': 'Entrez le titre du livre'
                            }
                        }) }}

			</div>

			<div class="mb-6">

				{{ form_row(bookForm.author, {
                            'attr': {
                                'class': 'shadow appearance-none border rounded w-full py-2 px-3 text-gray-700 leading-tight focus:outline-none focus:shadow-outline focus:border-blue-500',
                                'placeholder': 'Entrez le nom de l\'auteur'
                            }
                        }) }}
                    </div>
                    <div class="flex items-center justify-between">
                        <button type="submit" class="bg-blue-500 hover:bg-blue-600 text-white font-bold py-2 px-4 rounded focus:outline-none focus:shadow-outline transition duration-300">
                            Ajouter le livre
                        </button>
                        <a href="{{ path('homepage') }}" class="text-gray-600 hover:text-gray-800 font-medium transition duration-300">
                            Retour Ã  la liste
                        </a>
                    </div>
                </div>
            {{ form_end(bookForm) }}
        </div>
    </div>
{% endblock %}

{% extends 'base.html.twig' %}

{% block title %}
	{{ book.title }}
{% endblock %}

{% block body %}
	<div class="container mx-auto px-4 py-8">
		<div class="max-w-4xl mx-auto bg-white rounded-lg shadow-lg overflow-hidden">
			<div class="md:flex">
				<div class="md:w-1/3 flex justify-center items-center">
					{% if book.image %}
						<img src="{{ book.image }}" alt="{{ book.title }}" class="w-full h-96 object-contain">
					{% else %}
						<div class="w-full h-96 bg-gray-200 flex items-center justify-center">
							<svg class="w-24 h-24 text-gray-400" fill="none" stroke="currentColor" viewbox="0 0 24 24">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 6.253v13m0-13C10.832 5.477 9.246 5 7.5 5S4.168 5.477 3 6.253v13C4.168 18.477 5.754 18 7.5 18s3.332.477 4.5 1.253m0-13C13.168 5.477 14.754 5 16.5 5c1.747 0 3.332.477 4.5 1.253v13C19.832 18.477 18.247 18 16.5 18c-1.746 0-3.332.477-4.5 1.253"></path>
							</svg>
						</div>
					{% endif %}
				</div>
				<div class="md:w-2/3 p-8">
					<div class="flex justify-between items-start">
						<h1 class="text-3xl font-bold text-gray-800 mb-4">{{ book.title }}</h1>
						<a href="{{ path('homepage') }}" class="text-blue-500 hover:text-blue-600">
							<svg xmlns="http://www.w3.org/2000/svg" class="h-6 w-6" fill="none" viewbox="0 0 24 24" stroke="currentColor">
								<path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M10 19l-7-7m0 0l7-7m-7 7h18"/>
							</svg>
						</a>
					</div>

					<div class="space-y-4">
						<div>
							<h2 class="text-xl font-semibold text-gray-700">Auteur</h2>
							<p class="text-gray-600">{{ book.author }}</p>
						</div>

                        {% if book.genre %}
                            <div>
                                <h2 class="text-xl font-semibold text-gray-700">Genre</h2>
                                <p class="text-gray-600">{{ book.genre|join(', ') }}</p>
                            </div>
                        {% endif %}

						{% if book.publication %}
							<div>
								<h2 class="text-xl font-semibold text-gray-700">Date de publication</h2>
								<p class="text-gray-600">{{ book.publication|date('Y') }}</p>
							</div>
						{% endif %}

						{% if book.description %}
							<div>
								<h2 class="text-xl font-semibold text-gray-700">Description</h2>
								<p class="text-gray-600">{{ book.description }}</p>
							</div>
						{% endif %}

						{% if book.isbn %}
							<div>
								<h2 class="text-xl font-semibold text-gray-700">ISBN</h2>
								<p class="text-gray-600">{{ book.isbn }}</p>
							</div>
						{% endif %}
						<div>
							<h2 class="text-xl font-semibold text-gray-700">Ajouter par</h2>
							<p class="text-gray-600">{{ book.userName|capitalize}}</p>
						</div>

					</div>
				</div>
			</div>
		</div>
	</div>
{% endblock %}

<!DOCTYPE html>
<html>
	<head>
		<meta charset="UTF-8">
		<title>
			{% block title %}Library
			{% endblock %}
		</title>
		<link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text><text y=%221.3em%22 x=%220.2em%22 font-size=%2276%22 fill=%22%23fff%22>sf</text></svg>">
		<script src="https://cdn.tailwindcss.com"></script>
		{% block stylesheets %}{% endblock %}

		{% block javascripts %}
			{% block importmap %}
				{{ importmap('app') }}
			{% endblock %}
		{% endblock %}
	</head>
	<body class="bg-gradient-to-br from-indigo-100 via-purple-50 to-pink-100 min-h-screen">
		<header class="bg-gradient-to-r from-indigo-600 to-purple-600 shadow-[0_4px_12px_rgba(0,0,0,0.1)]">
			<nav class="container mx-auto px-6 py-4">
				<div class="flex items-center justify-between">
					<div class="text-2xl font-bold text-white tracking-wide">
						Library
					</div>
					<div class="flex items-center space-x-4">
						{% if app.user %}
							<a href="{{ path('app_logout') }}" id="app_login" class="px-6 py-2.5 bg-white/10 backdrop-blur-sm text-white rounded-lg hover:bg-white/20 transition-all duration-300 font-medium">
								Deconnexion
							</a>

						{% else %}
							<a href="{{ path('app_login') }}" id="app_login" class="px-6 py-2.5 bg-white/10 backdrop-blur-sm text-white rounded-lg hover:bg-white/20 transition-all duration-300 font-medium">
								Connexion
							</a>
						{% endif %}
						{% if 'ROLE_ADMIN' in roles %}
							<a href="{{ path('admin') }}" class="px-6 py-2.5 bg-white/10 backdrop-blur-sm text-white rounded-lg hover:bg-white/20 transition-all duration-300 font-medium">
								Admin
							</a>
						{% endif %}
					</div>
				</div>
			</nav>
		</header>
		<main class="container mx-auto"> {% block body %}{% endblock %}
			</main>
		</body>


	</html>
